# Database Configuration
POSTGRES_HOST=mdc-db
POSTGRES_DB=microdatacenter
POSTGRES_USER=mdc_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# Keycloak Configuration
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=your_keycloak_admin_password_here
KEYCLOAK_DB_HOST=mdc-db
KEYCLOAK_DB_NAME=keycloak
KEYCLOAK_DB_USER=mdc_user
KEYCLOAK_DB_PASSWORD=your_secure_password_here
KEYCLOAK_PORT=8090

# Security Settings
KC_HOSTNAME_STRICT=false
KC_HOSTNAME_STRICT_HTTPS=false
KC_HTTP_ENABLED=true

# API Configuration
API_PORT=8081
API_RUN_DB_MIGRATIONS=true

# Keycloak Authentication Configuration
KEYCLOAK_REALM=microdatacenter
KEYCLOAK_AUTH_SERVER_URL=http://localhost:8090
KEYCLOAK_RESOURCE=mdc-api
KEYCLOAK_SECRET=your-client-secret-here
KEYCLOAK_VERIFY_TOKEN_AUDIENCE=true
KEYCLOAK_ISSUER=http://localhost:8090/realms/microdatacenter

# API Key Configuration
API_KEYS_ENABLED=true

# Web Application Configuration
WEB_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_KEYCLOAK_URL=http://localhost:8090

# Proxmox VE Configuration (Container Mock API)
PVE_BASE_URL=http://mdc-pve:8000/api2/json/
PVE_AUTHENTICATION_SCHEME=PVEAPIToken
PVE_TOKEN_ID=your_pve_token_id_here
PVE_SECRET=your_pve_secret_here
PVE_VALIDATE_SERVER_CERTIFICATE=false
PVE_TIMEOUT=30
PVE_API_PORT=8001

# Legacy PVE settings (for backward compatibility)
PVE_CONTAINER_HOST=mdc-pve:8000
PVE_CONTAINER_USER=root@pam
PVE_CONTAINER_PASSWORD=your_container_pve_password_here
PVE_CONTAINER_VERIFY_SSL=false

# PVE Mock Service Configuration
PVE_HOST=mdc-pve:8000
PVE_USER=root@pam
PVE_PASSWORD=your_container_pve_password_here
PVE_VERIFY_SSL=false